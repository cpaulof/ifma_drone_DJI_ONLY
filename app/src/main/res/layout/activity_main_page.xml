<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    android:background="#00FFFFFF"
    tools:context=".views.MainPage">

    <Button
        android:id="@+id/btnOpenVideoStream"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="168dp"
        android:background="#00FFFFFF"
        android:onClick="handleBntClick"
        android:text="Video Stream"
        android:textColor="@color/sgray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOpenDetection1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="236dp"
        android:background="#00FFFFFF"
        android:text="Classificação"
        android:onClick="handleBntClick"
        android:textColor="@color/sgray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOpenMissionList"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:layout_marginStart="456dp"
        android:layout_marginTop="236dp"
        android:background="#00FFFFFF"
        android:text="Mission Control"
        android:onClick="handleBntClick"
        android:textColor="@color/sgray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOpenCreateMission"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:layout_marginStart="456dp"
        android:layout_marginTop="168dp"
        android:background="#00FFFFFF"
        android:text="Criar Missão"
        android:onClick="handleBntClick"
        android:textColor="@color/sgray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>